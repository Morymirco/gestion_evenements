{% extends 'base.html.twig' %}
{% block title %}{{ is_edit ? 'Éditer' : 'Créer' }} un événement{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-calendar-plus me-2"></i>{{ is_edit ? 'Éditer' : 'Créer' }} un événement
                </h1>
                <a href="{{ path('admin_events') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>Annuler
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    {{ form_label(form.title, 'Titre de l\'événement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ex: Conférence sur l\'IA'}}) }}
                                    {{ form_errors(form.title, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Description détaillée de l\'événement...'}}) }}
                                    {{ form_errors(form.description, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.category, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.eventDate, 'Date et heure', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.eventDate, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.eventDate, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.location, 'Lieu', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.location, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Salle de conférence A'}}) }}
                                    {{ form_errors(form.location, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.placeAvailable, 'Places disponibles', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(form.placeAvailable, {'attr': {'class': 'form-control', 'placeholder': '50'}}) }}
                                    {{ form_errors(form.placeAvailable, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>

                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(form.isActive, 'Événement actif', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                                    </div>
                                    {{ form_errors(form.isActive, {'attr': {'class': 'invalid-feedback'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('admin_events') }}" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>{{ is_edit ? 'Mettre à jour' : 'Créer' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 