{% extends 'base.html.twig' %}
{% block title %}Administration{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h2 mb-4">
                <i class="fas fa-cogs me-2"></i>Tableau de bord Administrateur
            </h1>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">{{ events|length }}</h4>
                                    <p class="card-text">Événements</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-calendar fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">{{ users|length }}</h4>
                                    <p class="card-text">Utilisateurs</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">{{ registrations|length }}</h4>
                                    <p class="card-text">Inscriptions</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-clipboard-list fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">{{ registrations|filter(r => not r.isConfirmed)|length }}</h4>
                                    <p class="card-text">En attente</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-clock fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-calendar-plus me-2"></i>Gestion des événements
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Créez, modifiez et gérez tous les événements de votre application.</p>
                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_events') }}" class="btn btn-primary">
                                    <i class="fas fa-list me-1"></i>Voir tous les événements
                                </a>
                                <a href="{{ path('admin_event_new') }}" class="btn btn-outline-primary">
                                    <i class="fas fa-plus me-1"></i>Créer un événement
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-tags me-2"></i>Gestion des catégories
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Organisez vos événements en catégories pour une meilleure navigation.</p>
                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_categories') }}" class="btn btn-success">
                                    <i class="fas fa-list me-1"></i>Voir toutes les catégories
                                </a>
                                <a href="{{ path('admin_category_new') }}" class="btn btn-outline-success">
                                    <i class="fas fa-plus me-1"></i>Créer une catégorie
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-users me-2"></i>Gestion des utilisateurs
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Consultez et gérez les comptes utilisateurs de votre application.</p>
                            <a href="{{ path('admin_users') }}" class="btn btn-info">
                                <i class="fas fa-list me-1"></i>Voir tous les utilisateurs
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-clipboard-check me-2"></i>Gestion des inscriptions
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Validez et gérez les inscriptions aux événements.</p>
                            <a href="{{ path('admin_registrations') }}" class="btn btn-warning">
                                <i class="fas fa-list me-1"></i>Voir toutes les inscriptions
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 