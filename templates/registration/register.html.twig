{% extends 'base.html.twig' %}

{% block title %}Créer un compte - Gestion Événements{% endblock %}

{% block body %}
<section class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 col-sm-10">
            <div class="card border-0 shadow-lg rounded-4 animate__animated animate__fadeIn">
                <div class="card-body p-5">
                    <h1 class="h3 mb-4 fw-bold text-center">
                        <i class="fas fa-user-plus me-2 text-primary"></i>Créer un compte
                    </h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                        <div class="mb-4">
                            <label for="{{ registrationForm.email.vars.id }}" class="form-label fw-semibold">{{ registrationForm.email.vars.label }}</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control rounded-end', 'autocomplete': 'email', 'required': 'required'}}) }}
                            </div>
                            {% if registrationForm.email.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ registrationForm.email.vars.errors|first.message }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-4">
                            <label for="{{ registrationForm.plainPassword.first.vars.id }}" class="form-label fw-semibold">{{ registrationForm.plainPassword.first.vars.label }}</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control rounded-end', 'autocomplete': 'new-password', 'required': 'required'}}) }}
                            </div>
                            {% if registrationForm.plainPassword.first.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ registrationForm.plainPassword.first.vars.errors|first.message }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-4">
                            <label for="{{ registrationForm.plainPassword.second.vars.id }}" class="form-label fw-semibold">{{ registrationForm.plainPassword.second.vars.label }}</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control rounded-end', 'autocomplete': 'new-password', 'required': 'required'}}) }}
                            </div>
                            {% if registrationForm.plainPassword.second.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {{ registrationForm.plainPassword.second.vars.errors|first.message }}
                                </div>
                            {% endif %}
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                            <i class="fas fa-user-plus me-2"></i>S'inscrire
                        </button>

                        <div class="text-center mt-3">
                            <p class="text-muted mb-0">
                                Déjà un compte ? <a href="{{ path('app_login') }}" class="text-primary fw-semibold">Connectez-vous</a>
                            </p>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Styles -->
<style>
body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: #f8fafc;
}
.card {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}
.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
}
.form-control, .input-group-text {
    border-radius: 0.5rem;
    transition: all 0.3s ease-in-out;
}
.form-control:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
}
.input-group-text {
    background: #f1f5f9;
    border: 1px solid #d1d5db;
}
.btn-primary {
    background: linear-gradient(145deg, #1e3a8a, #3b82f6);
    border: none;
    transition: all 0.3s ease-in-out;
}
.btn-primary:hover {
    transform: scale(1.05);
    background: linear-gradient(145deg, #1e40af, #60a5fa);
}
.invalid-feedback {
    font-size: 0.875rem;
    color: #dc3545;
}
h1 {
    font-family: 'Poppins', sans-serif;
}
@media (max-width: 576px) {
    .card-body {
        padding: 2rem;
    }
}
</style>

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
{% endblock %}